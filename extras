    <script>
        function mostrarDetalles(item) {
            // Alternar visibilidad de los detalles
            const detalles = document.getElementById(`detalles-${item}`);
            detalles.style.display = detalles.style.display === "none" || detalles.style.display === "" ? "block" : "none";
        }

        function mostrarGameOver() {
            // Redirigir a la página de Game Over
            window.location.href = "gameover.html";  // Cambia la URL según tu configuración
        }
    </script>

